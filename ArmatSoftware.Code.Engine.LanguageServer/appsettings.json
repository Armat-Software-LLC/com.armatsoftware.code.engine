{
  "languageServer": {
    "name": "Code Engine Language Server",
    "version": "1.0.0",
    "description": "Language Server Protocol implementation for Code Engine framework",
    "capabilities": {
      "textDocumentSync": {
        "openClose": true,
        "change": "Full",
        "save": {
          "includeText": true
        }
      },
      "completionProvider": {
        "resolveProvider": true,
        "triggerCharacters": [".", " ", "(", "\""]
      },
      "hoverProvider": true,
      "definitionProvider": true,
      "documentSymbolProvider": true,
      "diagnosticProvider": {
        "interFileDependencies": false,
        "workspaceDiagnostics": false
      }
    },
    "fileExtensions": [".ce", ".cs"],
    "subjectTypes": {
      "StringOnlySubject": {
        "namespace": "ArmatSoftware.Code.Engine.Tester.WebApi",
        "properties": [
          {
            "name": "Data",
            "type": "string",
            "description": "String data property with minimum length validation"
          }
        ]
      },
      "NumericAndStringSubject": {
        "namespace": "ArmatSoftware.Code.Engine.Tester.WebApi",
        "properties": [
          {
            "name": "Data",
            "type": "string",
            "description": "String data property"
          },
          {
            "name": "Number",
            "type": "int",
            "description": "Numeric property"
          }
        ]
      }
    },
    "codeEngineRules": {
      "maxCodeLength": 10000,
      "allowSubjectAssignment": false,
      "requiredNamespaces": [
        "System",
        "System.Collections.Generic",
        "System.Linq",
        "ArmatSoftware.Code.Engine.Core"
      ]
    }
  }
}